{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o", "programa",  // Nome do arquivo executável
                "-I${workspaceFolder}/Bolsa",    // Diretório de inclusão para Bolsa
                "-I${workspaceFolder}/Estoque",  // Diretório de inclusão para Estoque
                "-I${workspaceFolder}/Hemocentro",// Diretório de inclusão para Hemocentro
                "-I${workspaceFolder}/Pedido",    // Diretório de inclusão para Pedido
                "-I${workspaceFolder}/Triagem",   // Diretório de inclusão para Triagem
                "-I${workspaceFolder}/Usuarios/Atendente", // Diretório de inclusão para Atendente
                "-I${workspaceFolder}/Usuarios/Dependente", // Diretório de inclusão para Dependente
                "-I${workspaceFolder}/Usuarios/Doador", // Diretório de inclusão para Doador
                "-I${workspaceFolder}/Usuarios/Pessoa", // Diretório de inclusão para Pessoa
                "${workspaceFolder}/Bolsa/BolsaDeSangue.cpp",
                "${workspaceFolder}/Estoque/Estoque.cpp",
                "${workspaceFolder}/Hemocentro/Hemocentro.cpp",
                "${workspaceFolder}/Pedido/Pedido.cpp",
                "${workspaceFolder}/Triagem/Triagem.cpp",
                "${workspaceFolder}/Usuarios/Atendente/Atendente.cpp",
                "${workspaceFolder}/Usuarios/Dependente/Dependente.cpp",
                "${workspaceFolder}/Usuarios/Doador/Doador.cpp",
                "${workspaceFolder}/Usuarios/Pessoa/Pessoa.cpp",
                "${workspaceFolder}/main.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "G++ build task"
        }
    ]
}
